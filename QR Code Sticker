    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
            CreateFormLayout();
        }

        private void CreateFormLayout()
        {
            // Set Form Properties
            this.Text = "WIP Details";
            this.Size = new System.Drawing.Size(900, 600);

            // Add Title Label
            Label titleLabel = new Label
            {
                Text = "WIP Details",
                Font = new System.Drawing.Font("Arial", 16, System.Drawing.FontStyle.Bold),
                AutoSize = true,
                Location = new System.Drawing.Point(350, 20)
            };
            this.Controls.Add(titleLabel);

            // Section Labels and TextBoxes
            string[] labels = { "Customer Name", "Product Desc.", "Batch Number", "Thickness", "Width", "Surface finish",
                                "Mother Batch", "Customer Grade", "Weight", "Date/Shift" };
            int x1 = 50, y = 70, x2 = 400;

            foreach (string label in labels)
            {
                Label lbl = new Label
                {
                    Text = label,
                    Font = new System.Drawing.Font("Arial", 10),
                    AutoSize = true,
                    Location = new System.Drawing.Point(x1, y)
                };
                this.Controls.Add(lbl);

                TextBox txtBox = new TextBox
                {
                    Size = new System.Drawing.Size(200, 25),
                    Location = new System.Drawing.Point(x1 + 150, y - 3)
                };
                this.Controls.Add(txtBox);

                if (labels.Length / 2 <= Array.IndexOf(labels, label))
                {
                    lbl.Location = new System.Drawing.Point(x2, y);
                    txtBox.Location = new System.Drawing.Point(x2 + 150, y - 3);
                }
                y += 40;
            }

            // Add QR Code Placeholder
            PictureBox qrCodeBox = new PictureBox
            {
                BorderStyle = BorderStyle.FixedSingle,
                Size = new System.Drawing.Size(120, 120),
                Location = new System.Drawing.Point(650, 100)
            };
            this.Controls.Add(qrCodeBox);

            // Add Logo Placeholder
            PictureBox logoBox = new PictureBox
            {
                BorderStyle = BorderStyle.FixedSingle,
                Size = new System.Drawing.Size(150, 50),
                Location = new System.Drawing.Point(650, 250)
            };
            this.Controls.Add(logoBox);

            // Add Group Box for "IEO (for GP)"
            GroupBox ieoBox = new GroupBox
            {
                Text = "IEO (for GP)",
                Size = new System.Drawing.Size(400, 80),
                Location = new System.Drawing.Point(50, 320)
