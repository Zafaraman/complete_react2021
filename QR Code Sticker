            Label productTypeLabel = new Label { Text = "Product Type", Location = new System.Drawing.Point(220, 30), AutoSize = true };
            TextBox productTypeBox = new TextBox { Location = new System.Drawing.Point(310, 25), Size = new System.Drawing.Size(80, 25) };

            ieoBox.Controls.Add(noOfSheetsLabel);
            ieoBox.Controls.Add(noOfSheetsBox);
            ieoBox.Controls.Add(productTypeLabel);
            ieoBox.Controls.Add(productTypeBox);
            this.Controls.Add(ieoBox);

            // Add Group Box for "Previous Stage Remarks"
            GroupBox remarksBox = new GroupBox
            {
                Text = "Previous Stage Remarks",
                Size = new System.Drawing.Size(400, 100),
