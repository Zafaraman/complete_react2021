            };
            Label processRouteLabel = new Label { Text = "Process Route", Location = new System.Drawing.Point(10, 30), AutoSize = true };
            TextBox processRouteBox = new TextBox { Location = new System.Drawing.Point(120, 25), Size = new System.Drawing.Size(250, 25) };

            remarksBox.Controls.Add(processRouteLabel);
            remarksBox.Controls.Add(processRouteBox);
            this.Controls.Add(remarksBox);

            // Add Current Workcenter and Color Fields
            Label currentWorkcenterLabel = new Label { Text = "Current Workcenter", Location = new System.Drawing.Point(500, 350), AutoSize = true };
            TextBox currentWorkcenterBox = new TextBox { Location = new System.Drawing.Point(650, 345), Size = new System.Drawing.Size(150, 25) };

            Label topCoatColorLabel = new Label { Text = "Top Coat Color", Location = new System.Drawing.Point(500, 400), AutoSize = true };
