        // Helper Methods
        private void AddLabel(System.Windows.Forms.TableLayoutPanel table, string text, int col, int row)
        {
            var label = new System.Windows.Forms.Label();
            label.Text = text;
            label.Font = new System.Drawing.Font("Arial", 10F);
            label.AutoSize = true;
            label.Dock = System.Windows.Forms.DockStyle.Fill;
            table.Controls.Add(label, col, row);
        }

        private void AddTextBox(System.Windows.Forms.TableLayoutPanel table, int col, int row)
        {
            var textBox = new System.Windows.Forms.TextBox();
            textBox.Dock = System.Windows.Forms.DockStyle.Fill;
            table.Controls.Add(textBox, col, row);
        }
    }
