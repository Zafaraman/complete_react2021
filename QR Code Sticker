private void Form5_Load(object sender, EventArgs e)
{
    // Create an array to hold hardcoded values
    string[] data = new string[]
    {
        "TATA BLUESCOPE STEEL PRIVATE LIMITED", // Customer Name
        "PPGL C Y550PL HPL3 0.50BMT(0.58TPT)X610", // Product Description
        "K4C1072100", // Batch Number
        "0.500 MM", // Thickness
        "1235 MM", // Width
        "Surface Finish", // Surface Finish
        "Mother Batch", // Mother Batch
        "Customer Grade", // Customer Grade
        "15.160 MT", // Weight
        "22-DEC-24/B", // Date/Shift
        "No. of Sheets", // No. of Sheet
        "Product Type", // Product Type
        "4ZZ14689", // Previous State Remarks
        "CCL CRS (P-M2-TR-QA-C-QA-R-QA-PACK)", // Process Route
        "09-OA", // Current Work Center
        "C-Color Coated" // Next Work Center
    };

    // Assign array values to respective labels
    lblCustomerName.Text = data[0];
    lblProductDesc.Text = data[1];
    lblBatchNumber.Text = data[2];
    lblThickness.Text = data[3];
    lblWidth.Text = data[4];
    lblSurfaceFinish.Text = data[5];

    lblMotherBatch.Text = data[6];
    lblCustomerGrade.Text = data[7];
    lblWeight.Text = data[8];
    lblDateShift.Text = data[9];

    lblNoOfSheets.Text = data[10];
    lblProductType.Text = data[11];

    lblPreviousStateRemarks.Text = data[12];
    lblProcessRoute.Text = data[13];
    lblCurrentWorkCenter.Text = data[14];
    lblNextWorkCenter.Text = data[15];
}